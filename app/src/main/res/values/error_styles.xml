<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <!-- Custom style for TextInputLayout error messages -->
    <style name="CustomTextInputError" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">10sp</item>  <!-- Adjust the text size -->
        <item name="android:textColor">@android:color/holo_red_dark</item>  <!-- Adjust the error color -->
    </style>

</resources>
