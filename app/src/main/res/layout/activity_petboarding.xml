<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView5"
            android:layout_width="244dp"
            android:layout_height="131dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="480dp"
            android:scaleType="centerCrop"
            android:src="@drawable/noteboard">

        </com.google.android.material.imageview.ShapeableImageView>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Pet Boarding"
        android:textColor="@color/mama_mo_blue_darker"
        android:textSize="22sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="310dp"
        android:backgroundTint="@color/transparent"
        android:contentDescription="settings"
        android:scaleType="centerCrop"
        android:src="@drawable/dots" />

        <LinearLayout
            android:id="@+id/outerContainer2"
            android:layout_width="330dp"
            android:layout_height="120dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:background="@drawable/photosbg"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView1"
                android:layout_width="110dp"
                android:layout_height="105dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="62dp"
                android:scaleType="centerCrop"
                android:src="@drawable/green"
                app:shapeAppearanceOverlay="@style/roundimageview"
                app:strokeColor="@color/mama_mo_blue_darker"
                app:strokeWidth=".70dp" />

            <TextView
                android:id="@+id/textDayCare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="140dp"
                android:layout_marginTop="70dp"
                android:text="Day Care (Hourly)"
                android:textColor="@color/mama_mo_blue_darker"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDayCare1"
                android:layout_width="180dp"
                android:layout_height="42dp"
                android:layout_marginStart="140dp"
                android:layout_marginTop="95dp"
                android:text="Give your pet a  chance to relax and have a good experience at the Pawsalon. "
                android:textColor="@color/mama_mo_blue_darker"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textDayCarePrice"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginStart="140dp"
                android:layout_marginTop="140dp"
                android:text="Php 30.00 "
                android:textStyle="bold"
                android:textColor="@color/mama_mo_blue_darker"
                android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/outerContainer4"
            android:layout_width="330dp"
            android:layout_height="120dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:background="@drawable/photosbg"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView2"
            android:layout_width="110dp"
            android:layout_height="105dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="208dp"
            android:scaleType="centerCrop"
            android:src="@drawable/yellow"
            app:shapeAppearanceOverlay="@style/roundimageview"
            app:strokeColor="@color/mama_mo_blue_darker"
            app:strokeWidth=".70dp" />

        <TextView
            android:id="@+id/textOvernight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            android:layout_marginTop="210dp"
            android:text="Overnight or Longer Stay (Small-Medium)"
            android:textColor="@color/mama_mo_blue_darker"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textOvernight2"
            android:layout_width="180dp"
            android:layout_height="42dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="250dp"
            android:text="Give your pet a  chance to relax and have a good experience at the Pawsalon. "
            android:textColor="@color/mama_mo_blue_darker"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textOvernight5"
            android:layout_width="140dp"
            android:layout_height="20dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="298dp"
            android:text="Php 300.00 "
            android:textStyle="bold"
            android:textColor="@color/mama_mo_blue_darker"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/outerContainer5"
            android:layout_width="330dp"
            android:layout_height="120dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="350dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:background="@drawable/photosbg">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageView3"
                android:layout_width="110dp"
                android:layout_height="105dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pink"
                app:shapeAppearanceOverlay="@style/roundimageview"
                app:strokeColor="@color/mama_mo_blue_darker"
                app:strokeWidth=".70dp" />

            <TextView
                android:id="@+id/textLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="10dp"
                android:text="Overnight or Longer Stay (Large-Extra Large)"
                android:textColor="@color/mama_mo_blue_darker"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textOvernight7"
                android:layout_width="180dp"
                android:layout_height="42dp"
                android:layout_marginStart="-185dp"
                android:layout_marginTop="45dp"
                android:text="Give your pet a  chance to relax and have a good experience at the Pawsalon. "
                android:textColor="@color/mama_mo_blue_darker"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textOvernight9"
                android:layout_width="140dp"
                android:layout_height="20dp"
                android:layout_marginStart="-180dp"
                android:layout_marginTop="90dp"
                android:text="Php 450.00 "
                android:textStyle="bold"
                android:textColor="@color/mama_mo_blue_darker"
                android:textSize="12sp" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/bottom_buttons"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-20dp"
            android:layout_marginEnd="-20dp"
            android:layout_marginBottom="-12dp"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/btn_home"
                android:layout_width="48dp"
                android:layout_height="43dp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="@color/transparent"
                android:contentDescription="Home"
                android:scaleType="fitStart"
                android:src="@drawable/homeicon" />

            <ImageButton
                android:id="@+id/btn_feedback"
                android:layout_width="48dp"
                android:layout_height="43dp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="@color/transparent"
                android:contentDescription="Services"
                android:scaleType="fitStart"
                android:src="@drawable/pawicon" />

            <ImageButton
                android:id="@+id/btn_appointment"
                android:layout_width="48dp"
                android:layout_height="43dp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="@color/transparent"
                android:contentDescription="Appointments"
                android:scaleType="fitStart"
                android:src="@drawable/plusicon" />

            <ImageButton
                android:id="@+id/btn_notifications"
                android:layout_width="48dp"
                android:layout_height="43dp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="@color/transparent"
                android:contentDescription="Notifications"
                android:scaleType="fitStart"
                android:src="@drawable/notificationicon" />

            <ImageButton
                android:id="@+id/btn_profile"
                android:layout_width="48dp"
                android:layout_height="43dp"
                android:layout_marginEnd="-4dp"
                android:backgroundTint="@color/transparent"
                android:contentDescription="Profile"
                android:scaleType="fitStart"
                android:src="@drawable/profileicon" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>