<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="890dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/outerContainer1"
                android:layout_width="135dp"
                android:layout_height="165dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="55dp"
                android:layout_marginBottom="16dp"

                android:background="@drawable/photosbg"
                android:orientation="vertical"
                android:padding="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView1"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bath_blow_dry"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    app:strokeColor="@color/mama_mo_blue_darker"
                    app:strokeWidth=".70dp" />


                <TextView
                    android:id="@+id/textBathBlowDry1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="4dp"
                    android:text="Bath &amp; Blow Dry"
                    android:textColor="@color/mama_mo_blue_darker"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textBathBlowDryPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="1dp"
                    android:text="P 200 | P 300 | P 400"
                    android:textColor="@color/mama_mo_blue_darker"
                    android:textSize="10sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/outerContainer2"
                android:layout_width="135dp"
                android:layout_height="165dp"
                android:layout_toRightOf="@id/outerContainer1"
                android:layout_marginTop="55dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/photosbg"
                android:orientation="vertical"
                android:padding="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView2"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/nailclipping"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    app:strokeColor="@color/mama_mo_blue_darker"
                    app:strokeWidth=".70dp" />

                <TextView
                    android:id="@+id/textBathBlowDry2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="33dp"
                    android:layout_marginTop="4dp"
                    android:text="Nail Clipping"
                    android:textColor="@color/mama_mo_blue_darker"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textBathBlowDryPrice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/mama_mo_blue_darker"
                    android:text="P 100 | P 1500"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Third Container -->
            <LinearLayout
                android:id="@+id/outerContainer3"
                android:layout_width="135dp"
                android:layout_height="165dp"
                android:layout_below="@id/outerContainer1"
                android:layout_marginTop="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/photosbg"
                android:orientation="vertical"
                android:padding="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView3"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/earcleaning"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    app:strokeColor="@color/mama_mo_blue_darker"
                    app:strokeWidth=".70dp" />

                <TextView
                    android:id="@+id/textGroomingService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="4dp"
                    android:text="Ear Cleaning"
                    android:textColor="@color/mama_mo_blue_darker"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textGroomingPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="1dp"
                    android:text="Dog: P 150 | Cat: P 100"
                    android:textColor="@color/mama_mo_blue_darker"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Fourth Container -->
            <LinearLayout
                android:id="@+id/outerContainer4"
                android:layout_width="135dp"
                android:layout_height="165dp"
                android:layout_below="@id/outerContainer1"
                android:layout_marginTop="4dp"
                android:layout_marginStart="175dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/photosbg"
                android:orientation="vertical"
                android:padding="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView4"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/facetrimming"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    app:strokeColor="@color/mama_mo_blue_darker"
                    app:strokeWidth=".70dp" />

                <TextView
                    android:id="@+id/textFleaTreatment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="4dp"
                    android:text="Face Trimming"
                    android:textColor="@color/mama_mo_blue_darker"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textFleaPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="2dp"
                    android:text="P 100 | P 150 | P 200"
                    android:textColor="@color/mama_mo_blue_darker"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/outerContainer5"
                android:layout_width="135dp"
                android:layout_height="165dp"
                android:layout_below="@id/outerContainer3"
                android:layout_marginTop="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/photosbg"
                android:orientation="vertical"
                android:padding="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView5"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sanitaryshaving"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    app:strokeColor="@color/mama_mo_blue_darker"
                    app:strokeWidth=".70dp" />

                <TextView
                    android:id="@+id/textFifthService"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="4dp"
                    android:text="Sanitary Shaving"
                    android:textColor="@color/mama_mo_blue_darker"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textFifthPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="1dp"
                    android:text="P 100 | P 200"
                    android:textColor="@color/mama_mo_blue_darker"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Sixth Container -->
            <LinearLayout
                android:id="@+id/outerContainer6"
                android:layout_width="135dp"
                android:layout_height="165dp"
                android:layout_below="@id/outerContainer3"
                android:layout_marginTop="4dp"
                android:layout_marginStart="175dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/photosbg"
                android:orientation="vertical"
                android:padding="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView6"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pawtrimming"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    app:strokeColor="@color/mama_mo_blue_darker"
                    app:strokeWidth=".70dp" />
                <TextView
                    android:id="@+id/textSixthService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="4dp"
                    android:text="Paw Trimming"
                    android:textColor="@color/mama_mo_blue_darker"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textSixthPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="2dp"
                    android:text="P 100 | P 150 | P200"
                    android:textColor="@color/mama_mo_blue_darker"
                    android:textSize="10sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/outerContainer7"
                android:layout_width="136dp"
                android:layout_height="165dp"
                android:layout_below="@id/outerContainer5"
                android:layout_marginTop="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/photosbg"
                android:orientation="vertical"
                android:padding="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView7"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/teethbrushing"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    app:strokeColor="@color/mama_mo_blue_darker"
                    app:strokeWidth=".70dp" />

                <TextView
                    android:id="@+id/textSeventhService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="4dp"
                    android:text="Teeth Brushing"
                    android:textColor="@color/mama_mo_blue_darker"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textSeventhPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="1dp"
                    android:text="P 150 | P 225"
                    android:textColor="@color/mama_mo_blue_darker"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Eighth Container -->
            <LinearLayout
                android:id="@+id/outerContainer8"
                android:layout_width="135dp"
                android:layout_height="165dp"
                android:layout_below="@id/outerContainer5"
                android:layout_marginTop="4dp"
                android:layout_marginStart="175dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/photosbg"
                android:orientation="vertical"
                android:padding="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView8"
                    android:layout_width="110dp"
                    android:layout_height="105dp"
                    android:layout_marginStart="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cutnstyle"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    app:strokeColor="@color/mama_mo_blue_darker"
                    app:strokeWidth=".70dp" />

                <TextView
                    android:id="@+id/textEighthService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:text="Cut &amp; Style"
                    android:textColor="@color/mama_mo_blue_darker"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_SEEMORE"
                    android:layout_width="78dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="22dp"
                    android:background="@drawable/petsuppliesbg"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="See More"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textSize="8sp" />
            </LinearLayout>

            <!-- Ninth Container -->
            <LinearLayout
                android:id="@+id/outerContainer9"
                android:layout_width="135dp"
                android:layout_height="165dp"
                android:layout_below="@id/outerContainer7"
                android:layout_marginTop="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/photosbg"
                android:orientation="vertical"
                android:padding="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView9"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/basicgrooming"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    app:strokeColor="@color/mama_mo_blue_darker"
                    app:strokeWidth=".70dp" />

                <TextView
                    android:id="@+id/textNinthService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="4dp"
                    android:text="Basic Grooming"
                    android:textColor="@color/mama_mo_blue_darker"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textNinthPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="1dp"
                    android:text="S:350 | M:450 | L:550"
                    android:textColor="@color/mama_mo_blue_darker"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Tenth Container -->
            <LinearLayout
                android:id="@+id/outerContainer10"
                android:layout_width="135dp"
                android:layout_height="165dp"
                android:layout_below="@id/outerContainer7"
                android:layout_marginTop="4dp"
                android:layout_marginStart="175dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/photosbg"
                android:orientation="vertical"
                android:padding="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView10"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/fullgrooming"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    app:strokeColor="@color/mama_mo_blue_darker"
                    app:strokeWidth=".70dp" />

                <TextView
                    android:id="@+id/textTenthService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="4dp"
                    android:text="Full Grooming"
                    android:textColor="@color/mama_mo_blue_darker"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textTenthPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="2dp"
                    android:text="S:500 | M:600 | L:700"
                    android:textColor="@color/mama_mo_blue_darker"
                    android:textSize="10sp" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView19"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/basicgrooming"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    app:strokeColor="@color/mama_mo_blue_darker"
                    app:strokeWidth=".70dp" />

                <LinearLayout
                    android:id="@+id/outerContainer21"
                    android:layout_width="315dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="600dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/transparent"
                    android:orientation="horizontal" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


    <ImageButton
        android:id="@+id/btn_settings"
        android:layout_width="34dp"
        android:layout_height="44dp"
        android:layout_marginStart="310dp"
        android:layout_marginTop="-6dp"
        android:backgroundTint="@color/white"
        android:contentDescription="settings"
        android:scaleType="centerCrop"
        android:src="@drawable/dots" />

    <TextView
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:background="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:text="Grooming"
        android:textAlignment="center"
        android:textColor="@color/mama_mo_blue_darker"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-20dp"
        android:layout_marginEnd="-20dp"
        android:layout_marginBottom="-12dp"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="48dp"
            android:layout_height="43dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/transparent"
            android:contentDescription="Home"
            android:scaleType="fitStart"
            android:src="@drawable/homeicon" />

        <ImageButton
            android:id="@+id/btn_feedback"
            android:layout_width="48dp"
            android:layout_height="43dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/transparent"
            android:contentDescription="Services"
            android:scaleType="fitStart"
            android:src="@drawable/pawicon" />

        <ImageButton
            android:id="@+id/btn_appointment"
            android:layout_width="48dp"
            android:layout_height="43dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/transparent"
            android:contentDescription="Appointments"
            android:scaleType="fitStart"
            android:src="@drawable/plusicon" />

        <ImageButton
            android:id="@+id/btn_notifications"
            android:layout_width="48dp"
            android:layout_height="43dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/transparent"
            android:contentDescription="Notifications"
            android:scaleType="fitStart"
            android:src="@drawable/notificationicon" />

        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="48dp"
            android:layout_height="43dp"
            android:layout_marginEnd="-4dp"
            android:backgroundTint="@color/transparent"
            android:contentDescription="Profile"
            android:scaleType="fitStart"
            android:src="@drawable/profileicon" />
    </LinearLayout>
</RelativeLayout>